<div>
    <table id="table" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Statut</th>
                <th>Modifié le</th>
                <th>Catégorie</th>
            </tr>
        </thead>

        <tbody>
            {% for post in posts %}
                <tr data-slug="{{ post.slug }}">
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.status.name }}</td>
                    <td>{{ post.editedAt|date('d/m/Y H:i') }}</td>
                    <td>{{ post.category.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>